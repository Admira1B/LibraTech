<Window x:Class="LibraTech.Windows.DeletingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraTech.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Удаление" MinHeight="250" MinWidth="600" MaxHeight="200" MaxWidth="400" Background="#FFF4F4F4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="DeletingName" Content="Удаление" FontSize="25"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Style="{DynamicResource InputTextBox}" x:Name="DeletingTextBox" Margin="75,16,75,16" TextAlignment="Center" Text="ID" Width="250" Height="30" Background="#FFE0E0E0" FontSize="21" BorderBrush="#FFE0E0E0" Grid.Row="1"/>
        <Button Style="{DynamicResource RoundedButton}" x:Name="DeletingButton" Margin="75,15,75,16" Content="Удалить" Width="250" Height="30" Background="#FF514F50" FontSize="18" FontWeight="Bold" Foreground="White" Grid.Row="2" Click="DeletingButton_Click" />
    </Grid>
</Window>
